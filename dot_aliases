#Allow sudo to use aliases http://www.shellperson.net/using-sudo-with-an-alias/
alias sudo="sudo "

# Easier navigation: .., ..., ...., ....., ~ and -
alias -- -="cd -"
alias ~~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."


#Fix typo (and make funny new way to reboot)
alias rebooty=reboot
