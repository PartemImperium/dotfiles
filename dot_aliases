# Allow sudo to use aliases http://www.shellperson.net/using-sudo-with-an-alias/
alias sudo="sudo "

# Easier navigation: .., ..., ...., ....., ~ and -
alias -- -="cd -"
alias ~~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Fix Typo's
alias gity=git
# This one makes a funny new way to reboot as well as fixing a typo
alias rebooty=reboot
